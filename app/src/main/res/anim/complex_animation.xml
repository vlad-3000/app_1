<?xml version ="1.0" encoding ="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:interpolator/accelerate_decelerate">

    <scale android:fromXScale="2" android:toXScale="1"
        android:fromYScale="2" android:toYScale="1"
        android:pivotX="20%" android:pivotY="80%" android:duration="2500"
        android:repeatCount="infinite" android:repeatMode="reverse" />
    <rotate
        android:fromDegrees="0.0"
        android:toDegrees="20.0"
        android:pivotX="50%"
        android:pivotY="50%" />
    <alpha android:fromAlpha="1.0" android:toAlpha="0.3" android:duration="400"
        android:repeatCount="infinite" android:repeatMode="reverse" />
    <translate android:fromXDelta="0.0"
        android:toXDelta="50.0"
        android:fromYDelta="20.0"
        android:toYDelta="90.0"
        android:duration="3500"
        android:repeatMode="reverse"
        android:repeatCount="infinite" />

</set>